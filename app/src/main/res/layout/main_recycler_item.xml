<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardCornerRadius="20dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/loading_animation" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/holder_image"
            app:riv_corner_radius="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

        <com.github.mmin18.widget.RealtimeBlurView
            android:id="@+id/footer_item_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            app:realtimeBlurRadius="10dp"
            app:realtimeOverlayColor="@color/colorPrimaryDarkTransparent"
            app:riv_corner_radius_bottom_left="30dp"
            app:riv_corner_radius_bottom_right="30dp"
            app:riv_corner_radius_top_left="0dp"
            app:riv_corner_radius_top_right="0dp" />


        <TextView
            android:id="@+id/character_name_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="kjnjmnkj"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>